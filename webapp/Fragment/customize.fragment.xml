<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:t="sap.ui.table">
	<Dialog id="idColumnSelection" title="cusomize Table" contentWidth="5rem" class="cl_DupDialog sapUiSizeCompact" stretch="false" horizontalScrolling="false"
		verticalScrolling="true" contentHeight="auto" draggable="false" resizable="false">
		<customHeader>
			<Toolbar class="cl_DupDialogToolbar" height="2.5rem">
				<ToolbarSpacer/>
				<Text text="Customize Columns" class="cl_DupDialogTitle sapUiTinyMarginTopBottom"/>
				<ToolbarSpacer/>
			</Toolbar>
		</customHeader>
		<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" width="90%">
			<Input placeholder="Search" class="cl_uwl_inputField" liveChange="fnCustomizeSearch"/>
		</VBox>
		<t:Table id="idSettingsTable" rows="{CustomizeModel>/}" visibleRowCount="6"
			class="cl_CustomizeTable sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom" selectionMode="MultiToggle" selectionBehavior="Row"
			rowSelectionChange="onRowSelectionSettings">
			<t:columns>
				<t:Column >
					<Text text="Select All"/>
					<t:template>
						<VBox class="cl_tab">
							<Text text="{CustomizeModel>field}" class="cl_customizeTabText"/>
						</VBox>
					</t:template>
				</t:Column>
			</t:columns>
		</t:Table>
		<!-- Footer -->
		<buttons>
			<Button text="Cancel" icon="{= ${JM_ImageModel>/path} + 'cancel.svg'}" class="cl_DupDialog_change " press="fnCancelCustomize"/>
			<Button text="Apply" icon="{= ${JM_ImageModel>/path} + 'Apply.svg'}" class="cl_DupDialog_Download sapUiSmallMarginEnd" press="fnApplyCustomize"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>